<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
        >

    <ui:with field="i18n" type="org.jbpm.datamodeler.editor.client.editors.resources.i18n.Constants"/>

    <ui:style>
        .center-column {
            background-color: #FFFFFF;
            margin: 0;
            width: 100%;
            z-index: 998;
        }
    </ui:style>

    <gwt:HTMLPanel>
        <b:Row addStyleNames="{style.center-column}">
            <b:Column size="12">
                <gwt:VerticalPanel ui:field="mainPanel" styleName="row-fluid">

                    <gwt:HTMLPanel>

                        <table class="table table-bordered" style="margin-top:20px;">
                            <tr>
                                <td>
                                    <h4>
                                        <gwt:Label ui:field="objectName" styleName=""></gwt:Label>
                                    </h4>
                                    <gwt:ScrollPanel width="100%" height="400px">
                                        <b:CellTable ui:field="dataObjectPropertiesTable"
                                                     styleName="table table-bordered table-striped table-hover"/>
                                    </gwt:ScrollPanel>
                                </td>
                            </tr>
                        </table>

                    </gwt:HTMLPanel>

                    <gwt:HTMLPanel styleName="well">

                        <h5>
                            <gwt:Label text="{i18n.objectEditor_createProperty}"/>
                        </h5>

                        <gwt:HorizontalPanel styleName="row-fluid">
                            <gwt:TextBox ui:field="newPropertyName" styleName="span12"></gwt:TextBox>
                            <b:RadioButton ui:field="newPropertyBasicType" name="typeMode"
                                           text="{i18n.objectEditor_basicType}"/>
                            <b:RadioButton ui:field="newPropertyDataObjectType" name="typeMode"
                                           text="{i18n.objectEditor_dataObjectType}"/>
                            <b:ListBox ui:field="newPropertyType"></b:ListBox>
                            <b:CheckBox ui:field="newPropertyIsMultiple"
                                        text="{i18n.objectEditor_multiple}"></b:CheckBox>
                        </gwt:HorizontalPanel>
                        <gwt:Button ui:field="newPropertyButton" styleName="btn btn-primary"
                                    text="{i18n.objectEditor_create}"/>
                    </gwt:HTMLPanel>

                </gwt:VerticalPanel>
            </b:Column>
        </b:Row>
    </gwt:HTMLPanel>
</ui:UiBinder>
