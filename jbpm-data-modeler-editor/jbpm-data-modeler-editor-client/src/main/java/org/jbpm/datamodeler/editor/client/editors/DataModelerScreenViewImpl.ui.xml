<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:with field="i18n" type="org.jbpm.datamodeler.editor.client.editors.resources.i18n.Constants"/>

    <gwt:HTMLPanel>

        <div id="dataModelerViewDiv">
            <div class="row-fluid">
                <div class="span12 data-model">
                    <div class="navbar">  <!-- instead I set the navbar class here -->
                        <div class="container top-row">
                        </div>
                    </div>
                    <div class="row-fluid container">
                        <!--div class="well container span2"><label data-field="browserPanel"></label></div-->
                        <div class="span2" id="browserPanelDiv"><gwt:SimplePanel ui:field="browserPanel"></gwt:SimplePanel></div>
                        <div class="span7" id="dataObjectPanelDiv"><gwt:SimplePanel ui:field="dataObjectPanel"></gwt:SimplePanel></div>
                        <div class="well container span3" id="propertiesPanelDiv"><gwt:SimplePanel ui:field="propertiesPanel"></gwt:SimplePanel></div>
                    </div>
                </div>
            </div>
        </div>

    </gwt:HTMLPanel>

</ui:UiBinder>

