<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
        >

    <ui:with field="i18n" type="org.jbpm.datamodeler.editor.client.editors.resources.i18n.Constants"/>

    <gwt:HTMLPanel>


        <gwt:VerticalPanel ui:field="mainPanel" styleName="row-fluid">

            <gwt:HTMLPanel>
                <h4>
                    <gwt:Label ui:field="modelName"></gwt:Label>
                </h4>
                <gwt:ScrollPanel width="100%" height="390px">
                    <b:CellTable ui:field="dataObjectsTable" styleName="table table-condensed"/>
                </gwt:ScrollPanel>
            </gwt:HTMLPanel>

            <gwt:HTMLPanel>
                <h5>
                    <gwt:Label text="{i18n.modelBrowser_createDataObject}" />
                </h5>

                <gwt:TextBox ui:field="newEntityName"></gwt:TextBox>
                <b:Button ui:field="newEntityButton" styleName="btn btn-primary" text="{i18n.modelBrowser_create}"/>
            </gwt:HTMLPanel>

        </gwt:VerticalPanel>


    </gwt:HTMLPanel>

</ui:UiBinder>