<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:datamodeler="urn:import:org.jbpm.datamodeler.editor.client.editors.widgets"
        >

    <ui:with field="i18n" type="org.jbpm.datamodeler.editor.client.editors.resources.i18n.Constants"/>

    <gwt:HTMLPanel styleName="well container row-fluid ">

        <table class="row-fluid span12">
            <thead>
                <tr>
                    <td style="white-space: nowrap; font-weight: bold;">
                        <gwt:Label ui:field="nameColumnHeader" text="Name"></gwt:Label>
                    </td>
                    <td style="white-space: nowrap; font-weight: bold;">
                        <gwt:Label ui:field="valueColumnHeader" text="Value"></gwt:Label>
                    </td>
                </tr>
            </thead>
            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="titleLabel" text="Name"/>
                </td>
                <td>
                    <b:TextBox ui:field="name" styleName="span10"></b:TextBox>
                </td>
            </tr>

            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="labelLabel" text="Label"/>
                </td>
                <td>
                    <b:TextBox ui:field="label" styleName="span10"></b:TextBox>
                </td>
            </tr>

            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="descriptionLabel" text="Description"/>
                </td>
                <td>
                    <b:TextArea ui:field="description" styleName="span10"></b:TextArea>
                </td>
            </tr>

            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="typeLabel" text="Type"/>
                </td>
                <td>
                    <b:ListBox ui:field="typeSelector" styleName="span10"></b:ListBox>
                </td>
            </tr>

            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="equalsLabel" text="Equals"/>
                </td>
                <td>
                    <b:CheckBox ui:field="equalsSelector"></b:CheckBox>
                </td>
            </tr>

            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="requiredLabel" text="Required"/>
                </td>
                <td>
                    <b:CheckBox ui:field="requiredSelector"></b:CheckBox>
                </td>
            </tr>

            <tr>
                <td style="white-space: nowrap; vertical-align: top;">
                    <gwt:Label ui:field="positionLabel" text="@Position"/>
                </td>
                <td>
                    <b:TextBox ui:field="positionText" styleName="span10"></b:TextBox>
                </td>
            </tr>

        </table>

    </gwt:HTMLPanel>

</ui:UiBinder>